@page
@model Biblioteka.Pages.RoomReservations.CreateModel

@{
    ViewData["Title"] = "Create";
}
<div class="main_container">
    <div class="inner_container">
        <div class="list_header">
            <h1>Zarezerwuj salę</h1>
        </div>
        <div class="form_div">
            <div class="form_div_login">
                <form method="post">
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="RoomReservation.begginingOfReservationDate" class="control-label"></label>
                        <input asp-for="RoomReservation.begginingOfReservationDate" class="form-control" />
                        <span asp-validation-for="RoomReservation.begginingOfReservationDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="RoomReservation.endOfReservationDate" class="control-label"></label>
                        <input asp-for="RoomReservation.endOfReservationDate" class="form-control" />
                        <span asp-validation-for="RoomReservation.endOfReservationDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="RoomReservation.room" class="control-label"></label>
                        <select asp-for="@Model.RoomId" class="form-control" asp-items="Model.Rooms"></select>
                    </div>
                    <div class="form_buttons">
                        <div class="form-group">
                            <input type="submit" value="Zarezerwuj" class="button buttonGreen" />
                        </div>
                        <div>
                            <a class="lightText button buttonDefault" asp-page="Index">Wróć</a>
                        </div>
                    </div>
                   
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}